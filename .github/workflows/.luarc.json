{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT",
    "pathStrict": true
  },
  "workspace": {
    "library": [
      "$VIMRUNTIME/lua",
      "$PWD/lua",
      "${3rd}/luv/library",
      "$PWD/deps/luvit-meta/library",
      "$PWD/deps/snacks.nvim/lua",
      "$PWD/deps/plenary.nvim/lua",
      "$PWD/deps/telescope.nvim/lua",
      "$PWD/deps/fzf-lua/lua",
      "$PWD/deps/nvim-web-devicons/lua"
    ],
    "checkThirdParty": false
  },
  "diagnostics": {
    "severity": {
      "await-in-sync": "Error",
      "no-unknown": "Warning"
    },
    "neededFileStatus": {
      "await-in-sync": "Any",
      "no-unknown": "Any"
    },
    "unusedLocalExclude": [
      "_*"
    ]
  }
}
